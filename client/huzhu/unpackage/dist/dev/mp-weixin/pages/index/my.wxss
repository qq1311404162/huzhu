
.mt20 {
  margin-top: 20%;
}
.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.flex-column {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.input-group {
  margin-bottom: 40rpx;
}
.input-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  position: relative;
  padding: 10rpx;
}
.border {
  border-bottom: 10rpx solid #f5f5f5;
}
.input-row .title,
 {
  width: 35%;
  line-height: 70rpx;
}
.input-row .vcode {
  line-height: 60rpx;
  border-radius: 25rpx;
  padding: 0 25rpx;
  border: 1rpx solid #999;
  margin-right: 10rpx;
  font-size: 25rpx;
}
.input-row .vcode:active {
  background: #ADADAD;
}
.input-row ._input {
  width: 65%;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 10rpx;
}
.btn-row {
  width: 80%;
  margin: 10% auto 0 auto;
}
.user-info {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 4rpx solid #f5f5f5;
}
.user-info image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  padding-bottom: 20rpx;
}
.user-info text {
  font-size: 36rpx;
}
.item {
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 40rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  border-bottom: 4rpx solid #f5f5f5;
}
.item:after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
  transform: matrix(.71, .71, -.71, .71, 0, 0);
  position: relative;
  top: -4rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -8rpx;
}